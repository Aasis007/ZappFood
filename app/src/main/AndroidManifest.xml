<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roshan.zappfood">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:allowBackup="true"
        android:configChanges="screenSize|orientation|screenLayout"
        android:icon="@mipmap/ic__logo_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="screenSize|orientation|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Acitivities_Packages.Appetizers"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Breakfast"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Lunch"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Biryani"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Snacks"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Fastfood"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Deserts"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Nepali_Specialaist"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Dinner"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Acitivities_Packages.Beverage"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login.Login_Screen"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login.QR_Scan"
            android:configChanges="screenSize|orientation|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            >
        </activity>
        <activity
            android:name=".WelcomeScreen"
            android:configChanges="screenSize|orientation|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            >
        </activity>
        <activity android:name=".Check_Out"></activity>
    </application>

</manifest>